{
  "Routes": [
    {
      "UpstreamPathTemplate": "/check/polly",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7028
        }
      ],
      "DownstreamPathTemplate": "/Post/GetAllPosts",
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 5,
        "DurationOfBreak": 10000,
        "TimeoutValue": 2000
      }
    },
    {
      "UpstreamPathTemplate": "/ocelot/user",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7075
        }
      ],
      "DownstreamPathTemplate": "/User/GetUser'sProfile"
    },
    {
      "UpstreamPathTemplate": "/ocelot/userUpdate",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7075
        }
      ],
      "DownstreamPathTemplate": "/User/ChangeUserSettings"
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:5000",
    "QoSOptions": {
      "ExceptionsAllowedBeforeBreaking": 5,
      "DurationOfBreak": 10000,
      "TimeoutValue": 2000
    },
    "CorsOptions": {
      "policyName": "CorsPolicy",
      "allowedOrigins": [ "*" ],
      "allowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
      "allowedHeaders": [ "*" ]
    }
  }
}
